@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}
@model IEnumerable<Baseline.Models.User>

<br />
<br />
<br />
<br />

<form asp-controller="Home" asp-action="Authenticate" method="post">

    <div class="form-group col-sm-push-10">
        <label for="email">Email: </label>
        <input type="email" class="form-control" name="EmailAddress" placeholder="Email" required /><br />
    </div>
    <div class="form-group col-sm-push-10">
        <label for="password">Password: </label>
        <input type="password" class="form-control" name="Password" placeholder="Password" required /><br />
    </div>
    <div class="form-group col-sm-push-10">
        <button type="submit" class="btn btn-large btn-success">Log In</button>
    </div>
</form>
